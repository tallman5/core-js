{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "./test/**/*",
  ]
}